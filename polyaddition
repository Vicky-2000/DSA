#include<stdio.h>
#include<stdlib.h>
struct node{
    int data;
    int pow;
    struct node*link;
};
struct node*root=NULL;
struct node*head=NULL;
struct node*start=NULL;
void insert1()
{
struct node*temp;
temp=(struct node *) malloc(sizeof(struct node));
printf("Enter the node data:-\n");
scanf("%d",&temp->data);
printf("Enter the power:-\n");
scanf("%d",&temp->pow);
temp->link=NULL;
if(root==NULL)
{
    root=temp;
}
else{struct node *p=root;
    while(p->link!=NULL)
    {
        p=p->link;
    }p->link=temp;
}

}
void insert2()
{
struct node*temp;
temp=(struct node *) malloc(sizeof(struct node));
printf("Enter the node data:-\n");
scanf("%d",&temp->data);
printf("Enter the power:-\n");
scanf("%d",&temp->pow);
temp->link=NULL;
if(head==NULL)
{
    head=temp;
}
else{struct node *p=head;
    while(p->link!=NULL)
    {
        p=p->link;
    }p->link=temp;
}
}
void add()
{
    struct node*temp,*p,*q;
    
    p=root;q=head;
    
    while(p!=NULL && q!=NULL)
    {temp=(struct node *) malloc(sizeof(struct node));
        if(p->pow==q->pow)
        {
            temp->data=p->data+q->data;
            temp->pow=p->pow;
            temp->link=NULL;
            p=p->link;
            q=q->link;
        }
        else{
            if(p->pow>q->pow)
            {temp->link=NULL;
              temp->data=p->data;
              temp->pow=p->pow;
      

               p=p->link;
            }
            else{
                temp->data=q->data;
              temp->pow=q->pow;
              q=q->link;
            }
        }
        if(start==NULL)
           {
             start=temp;
          }
    else{
        struct node *r=start;
        while(r->link!=NULL)
        {
            r=r->link;
        }r->link=temp;
    }

}
    
    while(p!=NULL)
    {temp=(struct node *) malloc(sizeof(struct node));
    temp->link=NULL;
        temp->data=p->data;
              temp->pow=p->pow;
               
    if(start==NULL)
    {
      start=temp;
    }
    else{
        struct node *r=start;
        while(r->link!=NULL)
        {
            r=r->link;
        }r->link=temp;
    }
 p=p->link;
}


              
    
    while(q!=NULL)
    {temp=(struct node *) malloc(sizeof(struct node));
    temp->link=NULL;
        temp->data=q->data;
              temp->pow=q->pow;
               if(start==NULL)
    {
      start=temp;
    }
    else{
        struct node *r=start;
        while(r->link!=NULL)
        {
            r=r->link;
        }r->link=temp;
    }

              q=q->link;
    }
}
    

void display()
{
    struct node *p=start;
    if(start==NULL)
    {
        printf("Empty.\n");
    }
    while(p!=NULL)
    {
        printf("%d ",p->data);
        p=p->link;
    }printf("\n");
}

int main()
{
int n,m;
printf("Enter the number of nodes for polynomial 1:-\n");
scanf("%d",&n);
for(int i=0;i<n;i++)
{
    insert1();
}
printf("Enter the number of nodes for polynomial 2:-\n");
scanf("%d",&m);
for(int i=0;i<m;i++)
{
    insert2();
}add();
display();
}
